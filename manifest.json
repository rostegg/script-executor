{
    "manifest_version": 2,
    "name": "Script Executor",
    "version": "1.0",
   
    "description": "",
    "icons": {
      "64": "icons/script-executor-icon.png"
    },
  
    "applications": {
      "gecko": {
        "id": "script-executor@mozilla.org",
        "strict_min_version": "45.0"
      }
    },
    "background": {
        "scripts": ["src/browser-polyfill.js", "src/background.js"]
    },
    "commands": {
      "enable-remove-mode": {
        "suggested_key": { "default": "Alt+Shift+R" },
        "description": "Enable remove mode"
      },
      "disable-remove-mode": {
        "suggested_key": { "default": "Alt+Shift+D" },
        "description": "Disable remove mode"
      },
      "restore-from-cache": {
        "suggested_key": { "default": "Alt+Shift+Z" },
        "description": "Restore last removed item"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/index.js"]
      }
    ]
  }